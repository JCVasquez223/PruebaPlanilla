@model Prueba.AppWebMVC.Models.TipoPlanilla

@{
    ViewData["Title"] = "Crear Tipo de Planilla";
}

<h1 class="text-center">Crear Tipo de Planilla</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" class="shadow p-4 rounded bg-light">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="NombreTipo" class="form-label fw-bold">Nombre del Tipo de Planilla</label>
                <input asp-for="NombreTipo" class="form-control" placeholder="Ingresa el nombre del tipo de planilla" />
                <span asp-validation-for="NombreTipo" class="text-danger small"></span>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary w-50"><i class="fas fa-save"></i> Crear</button>
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> Regresar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}