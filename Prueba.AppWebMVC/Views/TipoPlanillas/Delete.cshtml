@model Prueba.AppWebMVC.Models.TipoPlanilla

@{
    ViewData["Title"] = "Eliminar Tipo de Planilla";
}

<h1 class="text-center my-4 text-danger">Eliminar Tipo de Planilla</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg p-4 border-danger">
            <h3 class="text-center mb-4">¿Estás seguro de que deseas eliminar este tipo de planilla?</h3>
            <dl class="row">
                <dt class="col-sm-4 fw-bold">
                    @Html.DisplayNameFor(model => model.NombreTipo)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.NombreTipo)
                </dd>
                <dt class="col-sm-4 fw-bold">
                    Estado
                </dt>
                <dd class="col-sm-8">
                    @(Model.Activo ? "Activo" : "Inactivo")
                </dd>
                <dt class="col-sm-4 fw-bold">
                    @Html.DisplayNameFor(model => model.FechaCreacion)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.FechaCreacion)
                </dd>
                <dt class="col-sm-4 fw-bold">
                    @Html.DisplayNameFor(model => model.FechaModificacion)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.FechaModificacion)
                </dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="fas fa-trash"></i> Eliminar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        <i class="fas fa-arrow-left"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>