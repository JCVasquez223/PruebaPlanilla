@model Prueba.AppWebMVC.Models.TipoPlanilla

@{
    ViewData["Title"] = "Editar Tipo de Planilla";
}

<h1 class="text-center my-4">Editar Tipo de Planilla</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg p-4">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="NombreTipo" class="form-label">Nombre del Tipo de Planilla</label>
                    <input asp-for="NombreTipo" class="form-control" />
                    <span asp-validation-for="NombreTipo" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fas fa-save"></i> Guardar Cambios
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        <i class="fas fa-arrow-left"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}