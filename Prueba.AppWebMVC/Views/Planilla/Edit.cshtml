@model Prueba.AppWebMVC.Models.Planilla

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Planilla</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NombrePlanilla" class="control-label"></label>
                <input asp-for="NombrePlanilla" class="form-control" />
                <span asp-validation-for="NombrePlanilla" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoPlanillaId" class="control-label"></label>
                <select asp-for="TipoPlanillaId" class="form-control" asp-items="ViewBag.TipoPlanillaId"></select>
                <span asp-validation-for="TipoPlanillaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFin" class="control-label"></label>
                <input asp-for="FechaFin" class="form-control" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Autorizacion" class="form-label fw-bold">Autorizacion</label>
                <select asp-for="Autorizacion" class="form-select shadow-sm">
                    <option value="0"> ---Seleccionnar---</option>
                    <option value="1"> Autorizado</option>
                    <option value="2"> No autorizado</option>
                </select>
                <span asp-validation-for="Autorizacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalPago" class="control-label"></label>
                <input asp-for="TotalPago" class="form-control" />
                <span asp-validation-for="TotalPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
